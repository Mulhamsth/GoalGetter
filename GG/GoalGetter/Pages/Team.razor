@page "/project/{proid:int}/team"
@layout ProjectMainLayout
@inject NavigationManager NavigationManager
@inject IViewTeamMembersByProjectIdUseCase viewTeamMembersByProjectIdUseCase

<h3>Team for project @proid</h3>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 d-flex align-items-center">
			<MudButton Variant="Variant.Filled" DisableElevation="true" Style="background-color: #0088d3; color: white" Color="Color.Primary" OnClick="NavigateAddTeam">
				+ Teammember
			</MudButton>
			<Searchbar OnSearchterm="OnTermSearch" />
		</div>
	</div>
</div>

@*@*Hier kommen die Karten für jeder Projekt*@
<TeamListComponent proid="@proid" searchTerm="@searchterm" />

@code {
	[Parameter]
	public int proid { get; set; }

	private List<GG.CoreBusiness.Teammember> team;

	private void NavigateAddTeam() => NavigationManager.NavigateTo($"/project/{proid}/team/addteam");

	private string searchterm = "";

	private void OnTermSearch(string searchterm)
	{
		this.searchterm = searchterm;
	}

}