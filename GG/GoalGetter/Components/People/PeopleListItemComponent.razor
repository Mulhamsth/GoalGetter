<div class="mb-5" style="margin-top: 20px">
	<MudContainer MaxWidth="MaxWidth.Small">
		<MudPaper Height="180px" Width="120%" Square="true">
			<div class="bg">
				<h2>@person.Firstname @person.Lastname</h2>
				@if(person.AvatarPath != null)
				{
					<MudAvatar Image="@person.AvatarPath"></MudAvatar>
				}
				else
				{
					<MudAvatar Color="Color.Primary">@person.Firstname.First()@person.Lastname.First()</MudAvatar>

				}
			</div>
			<hr />
			<p>@person.Address</p>
			<p>@person.Email</p>
		</MudPaper>
	</MudContainer>




</div>
@code {
	[Parameter]
	public Person person { get; set; }
}
