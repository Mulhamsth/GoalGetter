@inject IViewProjectsByNameUseCase viewProjectsByNameUseCase
@*Hier kommen die Karten für jeder Projekt*@

<MudGrid Spacing="@spacing" Justify="Justify.FlexStart" Class="mt-12">
	@if (projects != null)
	{
		@foreach (var project in projects)
		{
			<ProjectsListItemComponent project="@project" />
		}
	}
</MudGrid>


@code {
	private List<Project> projects;
	public int spacing { get; set; } = 2;

	[Parameter]
	public bool reloadFlag { get; set; }

	[Parameter]
	public string searchTerm { get; set; }

	protected override async Task OnParametersSetAsync()
	{
		projects = (await viewProjectsByNameUseCase.ExecuteAsync(this.searchTerm)).ToList();
	}
}
