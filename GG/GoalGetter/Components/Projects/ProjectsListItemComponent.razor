<div class="mud-grid mud-grid-spacing-xs-1 justify-start">
	<MudItem>	
		<MudPaper Height="170px" Width="200px">
			<div class="bg">
				<h2>@project.Name</h2>
			</div>
			<hr />
			<h3>@project.Description</h3>
			<p>@project.status</p>
			<div>
				@if (project.assignedTeam != null)
				{
					foreach (var teamMember in project.assignedTeam.members)
					{
						<img src="@teamMember.person.AvatarPath" class="rounded-circle" width="25px" />
					}
				}
			</div>
		</MudPaper>
	</MudItem>
</div>


@code {
	[Parameter]
	public Project project{ get; set; }

}
